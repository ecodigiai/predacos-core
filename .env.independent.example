# ============================================
# Predacos - Configuração Independente
# ============================================
# Este arquivo contém todas as variáveis de ambiente
# necessárias para executar o Predacos de forma
# completamente independente, sem dependências do Manus AI

# ============================================
# BANCO DE DADOS
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=predacos
DB_USER=predacos
DB_PASSWORD=predacos123
DATABASE_URL=postgresql://predacos:predacos123@localhost:5432/predacos

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# ============================================
# MINIO (Armazenamento S3 local)
# ============================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123

# ============================================
# OLLAMA (Modelos de IA locais)
# ============================================
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=mistral

# ============================================
# APIs de IA Gratuitas (Fallback)
# ============================================
GROQ_API_KEY=
TOGETHER_API_KEY=
HF_API_KEY=

# ============================================
# AUTENTICAÇÃO
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=2592000

# ============================================
# OAUTH - GitHub
# ============================================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback
GITHUB_TOKEN=

# ============================================
# OAUTH - Google
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ============================================
# AUTO-DESCOBERTA DE APIs
# ============================================
RAPIDAPI_KEY=
POSTMAN_API_KEY=
POSTMAN_WORKSPACE_ID=

# ============================================
# MONITORAMENTO E LOGS
# ============================================
LOG_LEVEL=info
ELASTICSEARCH_ENDPOINT=http://localhost:9200
KIBANA_ENDPOINT=http://localhost:5601

# ============================================
# PROMETHEUS E GRAFANA
# ============================================
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
GRAFANA_PASSWORD=admin123

# ============================================
# APLICAÇÃO
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
APP_TITLE=Predacos - Ecossistema Digital Vivo
APP_DOMAIN=localhost

# ============================================
# SEGURANÇA
# ============================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================
# NOTIFICAÇÕES
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ============================================
# DESENVOLVIMENTO
# ============================================
DEBUG=false
HOT_RELOAD=true
MOCK_AI=false

# ============================================
# AUTO-EVOLUÇÃO
# ============================================
EVOLUTION_ENABLED=true
EVOLUTION_FREQUENCY=daily
EVOLUTION_MAX_CHANGES_PER_DAY=5
AB_TESTING_ENABLED=true
AB_TESTING_TRAFFIC_SPLIT=10

# ============================================
# DEPLOYMENT
# ============================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_PREFIX=predacos
KUBERNETES_NAMESPACE=predacos
KUBERNETES_REPLICAS=1
